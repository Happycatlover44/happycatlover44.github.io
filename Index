    <button onclick="showImage()">View</button>
    
    <div id="imageContainer">
        <img id="myImage" src="" alt="My Image">
    </div>

    <script>
        function showImage() {
            // Replace this URL with your image URL
            const imageUrl = "https://example.com/your-image.jpg";
            
            const image = document.getElementById("myImage");
            image.src = imageUrl;
            image.style.display = "block";
        }
    </script>
